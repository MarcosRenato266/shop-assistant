{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": ["off"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "prefer-const": ["warn"],
    "eqeqeq": ["warn"],
    "comma-dangle": ["warn", "always-multiline"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next|res" }]
  }
}